<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionActivity">

    <!-- 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_backarrow"
        android:contentDescription="뒤로가기 버튼"
        app:tint="#222"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 설정 항목 전체를 감싸는 LinearLayout -->
    <LinearLayout
        android:id="@+id/optionContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 소리 조절 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소리"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#222"
            android:layout_marginBottom="12dp"/>
        <SeekBar
            android:id="@+id/seekBarVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_marginBottom="32dp"/>

        <!-- 진동 ON/OFF -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="진동"
                android:textSize="20sp"
                android:textColor="#222"
                android:layout_weight="1"/>
            <Switch
                android:id="@+id/switchVibration"
                android:layout_width="56dp"
                android:layout_height="32dp"/>
        </LinearLayout>

        <!-- 알림 ON/OFF -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="알림"
                android:textSize="20sp"
                android:textColor="#222"
                android:layout_weight="1"/>
            <Switch
                android:id="@+id/switchNotification"
                android:layout_width="56dp"
                android:layout_height="32dp"/>
        </LinearLayout>

        <!-- 개인정보 처리방침 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="개인정보 처리방침"
                android:textSize="18sp"
                android:textColor="#222"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/btnPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자세히 >"
                android:textSize="16sp"
                android:textColor="#2196F3"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- 이용약관 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="이용약관"
                android:textSize="18sp"
                android:textColor="#222"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/btnTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자세히 >"
                android:textSize="16sp"
                android:textColor="#2196F3"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- 고객센터 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="48dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="고객센터"
                android:textSize="18sp"
                android:textColor="#222"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02-123-456"
                android:textSize="16sp"
                android:textColor="#666"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- 운영환경 안내 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운영환경"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#222"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 안드로이드 10.0 이상\n• iOS 13.0 이상\n• 최소 500MB 여유 저장 공간\n• 마이크 권한(음성 인식 및 녹음 기능 사용 시)\n• 저장소 권한(사진/음성 파일 저장 및 불러오기 시)\n• 알림 권한(푸시 알림 수신 시)\n• 네트워크 권한(인터넷 연결 필요 시)"
            android:textSize="14sp"
            android:textColor="#666"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
