<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    tools:context=".reviewBoard.AddBoardActivity">

    <!-- 상단: 뒤로가기 + 타이틀 -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_backarrow"
        android:contentDescription="뒤로가기"
        app:tint="#222"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="게시글 작성"
        android:textColor="#222"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 입력 영역(스크롤) -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintBottom_toTopOf="@id/btnUpload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 제목 입력 -->
            <EditText
                android:id="@+id/editPostTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="제목을 입력하세요"
                android:textSize="16sp"
                android:textColor="#222"
                android:padding="12dp"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 내용 입력 -->
            <EditText
                android:id="@+id/editPostContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="내용을 입력하세요"
                android:textSize="16sp"
                android:textColor="#333"
                android:gravity="top"
                android:minLines="8"
                android:padding="12dp"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/editPostTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 이미지 미리보기 -->
            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                android:contentDescription="첨부 이미지"
                app:layout_constraintTop_toBottomOf="@id/editPostContent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 이미지 첨부 버튼 -->
            <Button
                android:id="@+id/btnAddImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 추가"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#CCCCCC"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@id/imagePreview"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- 업로드 버튼 (하단 고정) -->
    <Button
        android:id="@+id/btnUpload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="등록"
        android:textColor="#FFF"
        android:backgroundTint="#2196F3"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
