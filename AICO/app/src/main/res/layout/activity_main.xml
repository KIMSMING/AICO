<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appLogo2"
        android:layout_width="101dp"
        android:layout_height="52dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        android:text="AICO"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnGoUserView"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="마이페이지"
        android:src="@drawable/ic_user_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnOption"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="설정"
        android:src="@drawable/ic_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnQuest"
        android:layout_width="184dp"
        android:layout_height="271dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:text="면접 보기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddQuestion"
        android:layout_width="191dp"
        android:layout_height="139dp"
        android:layout_marginTop="84dp"
        android:text="질문 추가"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/btnQuest"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTestSpeech"
        android:layout_width="190dp"
        android:layout_height="133dp"
        android:text="음성 인식 테스트"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toEndOf="@+id/btnQuest"
        app:layout_constraintTop_toBottomOf="@+id/btnAddQuestion" />

    <!-- 후기보기  -->
    <TextView
        android:id="@+id/btnGoBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="후기보기 >"
        android:textSize="16sp"
        android:textColor="#2196F3"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/btnTestSpeech"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 카드형 게시글 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMainPreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnGoBoard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_board_preview"
        tools:itemCount="3"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_rogo" />

</androidx.constraintlayout.widget.ConstraintLayout>