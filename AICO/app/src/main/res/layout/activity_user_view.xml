<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/professional_bg_primary"
    tools:context=".user.UserViewActivity">

    <!-- 상단 네비게이션 바 -->
    <LinearLayout
        android:id="@+id/topNavBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/professional_bg_secondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            style="@style/ProfessionalIconButton"
            android:src="@drawable/ic_backarrow"
            android:contentDescription="뒤로가기"
            app:tint="@color/professional_text_secondary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="내 프로필"
            android:textColor="@color/professional_text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="sans-serif-medium" />

        <ImageButton
            android:id="@+id/btnOption"
            style="@style/ProfessionalIconButton"
            android:src="@drawable/ic_settings"
            android:contentDescription="설정"
            app:tint="@color/professional_text_secondary" />
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topNavBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 프로필 헤더 카드 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/professional_card_bg"
                android:padding="24dp"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_person"
                    android:tint="@color/professional_text_secondary"
                    app:strokeColor="@color/professional_border"
                    app:strokeWidth="2dp"
                    app:shapeAppearanceOverlay="@style/CircleImageView" />

                <TextView
                    android:id="@+id/textNickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사용자 닉네임"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/professional_text_primary"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user@example.com"
                    android:textSize="14sp"
                    android:textColor="@color/professional_text_secondary"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btnChangePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    style="@style/ProfessionalButtonSecondary"
                    android:text="비밀번호 변경"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- 개인정보 카드 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/professional_card_bg"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개인정보"
                    android:textColor="@color/professional_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- 이름 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textColor="@color/professional_text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="홍길동"
                        android:textColor="@color/professional_text_primary"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 생년월일 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="생년월일"
                        android:textColor="@color/professional_text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textBirth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1990-01-01"
                        android:textColor="@color/professional_text_primary"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 성별 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="성별"
                        android:textColor="@color/professional_text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textGender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="남성"
                        android:textColor="@color/professional_text_primary"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 주소 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="주소"
                        android:textColor="@color/professional_text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="서울특별시 강남구"
                        android:textColor="@color/professional_text_primary"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 전화번호 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="전화번호"
                        android:textColor="@color/professional_text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="010-1234-5678"
                        android:textColor="@color/professional_text_primary"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 계정 관리 카드 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/professional_card_bg"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계정 관리"
                    android:textColor="@color/professional_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ProfessionalButtonPrimary"
                    android:text="내 정보 수정"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ProfessionalButtonSecondary"
                    android:text="면접 히스토리"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ProfessionalButtonSecondary"
                    android:text="로그아웃"
                    android:textColor="@color/professional_warning"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnDeleteAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ProfessionalButtonSecondary"
                    android:text="계정 삭제"
                    android:textColor="@color/professional_error" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
