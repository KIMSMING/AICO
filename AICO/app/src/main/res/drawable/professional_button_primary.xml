<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/professional_primary_dark" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/professional_primary_light" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/professional_bg_tertiary" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/professional_border" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/professional_primary" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/professional_primary_light" />
        </shape>
    </item>
</selector>

